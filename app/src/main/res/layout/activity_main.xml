<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity"
    android:background="@drawable/design">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/tool"
    app:titleTextColor="@color/Black"
    android:textAlignment="center"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="EMAIL"
    android:id="@+id/loginemail"
android:textStyle="bold"
    android:textColorHint="@color/Black"

    />


    <EditText
        android:id="@+id/psdlo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColorHint="@color/Black"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:background="@drawable/part2"/>

    <Button
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW USERS? CLICK TO SIGN UP"
        android:id="@+id/btn"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:background="@drawable/part2"/>
    <Button

        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORGET PASSWORD ?"
        android:id="@+id/pswdreset"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:background="@drawable/part2"
        />

    <TextView
        android:layout_marginTop="12dp"
      android:id="@+id/texthere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER EMAIL TO SEND PASSWORD LINK :"
      android:textColor="@color/Black"
        android:background="@drawable/alerttype"
        android:textStyle="bold"
        android:visibility="invisible"
        />
    <EditText
        android:layout_marginTop="12dp"
        android:id="@+id/emailtogenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:textColorHint="@color/Black"
        android:visibility="invisible"
        android:background="@drawable/alerttype"
        />
    <Button
        android:id="@+id/sendbtn"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/alerttype"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:text="SEND"
        android:visibility="invisible"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/progessbar"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"

        />

</LinearLayout>